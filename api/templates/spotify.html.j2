{% extends "base.html.j2" %}

{% block container_styles %}
/* Light theme - transparent background */
background-color: transparent;
border: none;
{% endblock %}

{% block theme_styles %}
/* Light theme specific overrides */
.container {
    padding-top: 15px;
}

.song {
    font-weight: 600;
}

.bar {
    /* Light theme fallback colors */
    background: #78ff8c;
    background: linear-gradient(
        90deg,
        var(--bar-color-1) 0%,
        var(--bar-color-2) 33%,
        var(--bar-color-3) 66%,
        var(--bar-color-4) 100%
    );
    background-size: 200% 100%;
    background-position: 0% 50%;
    background-attachment: fixed;
    animation: gradient 15s ease infinite, pulse 0ms -800ms ease-in infinite alternate;
}
{% endblock %}
